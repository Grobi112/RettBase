// Firebase Storage Security Rules für Profilbilder, E-Mail- und Chat-Anhänge
// Alle authentifizierten Benutzer (jede Rolle) dürfen Chat-Anhänge hochladen und lesen.

rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /kunden/{companyId}/profile-images/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    match /kunden/{companyId}/email-attachments/{emailId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Chat-Anhänge: Alle eingeloggten Benutzer (beliebige Pfadtiefe)
    match /kunden/{companyId}/chat-attachments/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Mängel-Bilder: Für Mängelmelder und Mangelbearbeitung
    match /kunden/{companyId}/maengel-attachments/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Unfallbericht: Skizze, Unterschrift, Bilder
    match /kunden/{companyId}/unfallbericht-attachments/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
